<% content_for :script do %>
  <%= render "home/shared/scripts" %>
<% end %>

<% content_for :meta do %>
  <% if page_data = @meta_data[action_name] %>
    <link rel="canonical" href="<%= send(page_data[:url]) %>">
    <meta name="description" content="<%= page_data[:description] %>">
    <meta property="og:title" content="<%= page_data[:title] %>">
    <meta property="og:description" content="<%= page_data[:description] %>">
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= send(page_data[:url]) %>">
  <% end %>
<% end %>

<% content_for :content do %>
  <%# The .blog-scope class will now be applied in the individual blog view files %>
  <div class="block bg-white text-black font-['ABC_Favorit'] text-base font-normal leading-relaxed tracking-tight">
    <%= render "home/shared/nav" %>
    <div class="overflow-hidden">
      <%= yield %>
    </div>
    <%# Footer will be rendered by the yielded view if it's a blog page %>
  </div>
<% end %>

<%= render template: "layouts/application" %>
