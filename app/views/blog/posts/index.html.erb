<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <header class="mb-8">
    <h1 class="text-5xl font-bold text-center lg:text-left">Blog</h1>
  </header>

  <%# Removed lg:flex-row and width classes for single column layout %>
  <div class="flex flex-col">
    <main class="w-full">
      <%# Category Filters %>
      <nav class="mb-8">
        <ul class="flex flex-wrap gap-2 border-b border-black pb-4">
          <li>
            <%= link_to "All Posts", blog_index_path, class: "px-4 py-2 rounded-full font-medium #{ @active_category.nil? && @active_tag.nil? ? 'bg-black text-white' : 'bg-gray-100 hover:bg-gray-200' }" %>
          </li>
          <% @categories.each do |category| %>
            <li>
              <%= link_to category, blog_category_path(category_name: category.parameterize), class: "px-4 py-2 rounded-full font-medium #{ @active_category == category.parameterize ? 'bg-black text-white' : 'bg-gray-100 hover:bg-gray-200' }" %>
            </li>
          <% end %>
          <%# TODO: Add other static filters like "Creators", "Tips & Tricks" if they are not dynamic categories based on the mockup (e.g. "All Posts", "Creators", "Tips & tricks", "Product updates", "Community") %>
        </ul>
      </nav>

      <%# Featured Post Section %>
      <% if @featured_post %>
        <section class="mb-12">
          <h2 class="text-xl font-semibold mb-2 uppercase tracking-wider">Featured</h2>
          <%# Based on mockup, featured post is a large card %>
          <article class="p-6 border-2 border-black rounded-lg bg-pink-500 text-black shadow-lg">
            <%# Mockup has GUMROAD text, creator tag, and image elements %>
            <div class="flex justify-between items-start mb-4">
              <span class="text-4xl font-bold">GUMROAD</span>
              <span class="inline-flex items-center bg-white px-3 py-1 rounded-full text-sm font-semibold border border-black">
                <%= image_tag "logo-g.svg", alt: "Gumroad icon", class: "w-4 h-4 mr-2" %> <%# Assuming logo-g.svg is available %>
                <%= @featured_post.tags.first || "Creator" %> <%# Using first tag or a placeholder %>
              </span>
            </div>
            <div class="flex flex-col md:flex-row gap-6 items-center">
              <div class="md:w-1/2">
                <h3 class="text-4xl font-bold mb-4 leading-tight"><%= @featured_post.title %></h3>
                <p class="text-lg mb-4">By <%= @featured_post.tags.first || "Jingsketch" %></p> <%# Example author, adjust as needed %>
              </div>
              <% if @featured_post.featured_image %>
                <div class="md:w-1/2 flex justify-center md:justify-end relative">
                  <%= image_tag @featured_post.featured_image, alt: @featured_post.title, class: "w-full max-w-sm h-auto object-cover rounded-md" %>
                  <%# Decorative elements from mockup %>
                  <div class="absolute top-0 right-0 -mr-4 -mt-4 w-12 h-12 bg-green-400 rounded-full flex items-center justify-center text-2xl">üñåÔ∏è</div>
                  <div class="absolute bottom-0 left-0 -ml-4 -mb-4 w-12 h-12 bg-yellow-400 rounded-full flex items-center justify-center text-2xl">üôå</div>
                </div>
              <% end %>
            </div>
             <div class="mt-4">
              <% (@featured_post.tags || []).each do |tag| %>
                <span class="inline-block bg-black text-white rounded-full px-3 py-1 text-xs font-semibold mr-2 mb-2"><%= tag %></span>
              <% end %>
            </div>
            <p class="text-lg font-semibold mt-2">Creator Spotlight: <%= @featured_post.tags.first || "Jingsketch" %></p>
            <p class="text-sm text-gray-700"><%= @featured_post.date.strftime("%B %d, %Y") %></p>
          </article>
        </section>
      <% end %>

      <%# Recent Updates Section - MOVED HERE %>
      <section class="mb-12">
        <h3 class="text-xl font-semibold mb-4 border-b border-gray-300 pb-2">Recent updates</h3>
        <% if @recent_updates.any? %>
          <ul>
            <% @recent_updates.each do |post| %>
              <li class="mb-4 pb-4 border-b border-gray-100 last:border-b-0 last:pb-0 last:mb-0 flex justify-between items-center">
                <div>
                  <h4 class="font-medium hover:text-pink-600">
                    <%= link_to post.title, blog_post_path(slug: post.slug) %>
                  </h4>
                  <p class="text-xs text-gray-500"><%= post.date.strftime("%B %d, %Y") %></p>
                </div>
                <%= link_to "‚Üí", blog_post_path(slug: post.slug), class: "text-2xl text-black hover:text-pink-600 font-semibold p-2 border border-black rounded-full w-10 h-10 flex items-center justify-center" %>
              </li>
            <% end %>
          </ul>
          <%= link_to "See all ‚Üí", blog_index_path, class: "mt-4 inline-block text-black hover:text-pink-600 font-semibold" %>
        <% else %>
          <p class="text-gray-500">No recent updates.</p>
        <% end %>
      </section>

      <%# Testimonial/Quote Section (from mockup) %>
      <section class="mb-12 p-6 border-y-2 border-black">
        <blockquote class="text-2xl lg:text-3xl text-black max-w-3xl mx-auto text-center leading-normal">
          <p class="mb-6">‚ÄúSelling my Photoshop brushes on Gumroad changed my entire career trajectory and led to partnerships with Pixar, Disney, and eventually Adobe.‚Äù</p>
          <footer class="text-lg">
            <cite class="font-semibold not-italic">Kyle T Webster, Digital Brush Creator</cite>
          </footer>
        </blockquote>
        <div class="text-center mt-6">
            <%= link_to "Read article", "#", class: "inline-block bg-black text-white px-8 py-3 rounded-md hover:bg-gray-800 font-semibold" %>
        </div>
      </section>

      <%# Main Post Grid %>
      <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @posts.each do |post| %>
          <article class="border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200">
            <% if post.featured_image %>
              <%= link_to blog_post_path(slug: post.slug) do %>
                <%= image_tag post.featured_image, alt: post.title, class: "w-full h-48 object-cover" %>
              <% end %>
            <% end %>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">
                <%= link_to post.title, blog_post_path(slug: post.slug), class: "hover:text-pink-600" %>
              </h3>
              <p class="text-sm text-gray-500 mb-2">
                <span class="font-medium"><%= post.category %></span> | Published on <%= post.date.strftime("%B %d, %Y") %>
              </p>
              <% if post.tags.any? %>
                <div class="mb-3">
                  <% post.tags.each do |tag| %>
                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 mr-2 mb-2"><%= tag %></span>
                  <% end %>
                </div>
              <% end %>
              <p class="text-gray-700 mb-4"><%= post.excerpt %></p>
              <%= link_to "Read more ‚Üí", blog_post_path(slug: post.slug), class: "text-pink-600 hover:text-pink-800 font-semibold" %>
            </div>
          </article>
        <% end %>
        <% if @posts.empty? && !@featured_post %> <%# Show only if no posts at all %>
          <p class="text-gray-600 col-span-full text-center py-10">No posts found.</p>
        <% elsif @posts.empty? && @featured_post %>
           <%# Featured post is shown, but no other posts in the main grid. Optionally add a message here or leave blank. %>
        <% end %>
      </section>
    </main>
  </div>
</div>

<%= render "home/shared/footer" %>
