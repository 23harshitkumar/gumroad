<% content_for :title, "Reported Products" %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Reported Products</h1>

  <% if @reports.empty? %>
    <div class="bg-gray-100 p-6 rounded-lg text-center">
      <p class="text-gray-600">No reported products found.</p>
    </div>
  <% else %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border border-gray-200">
        <thead>
          <tr class="bg-gray-100">
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reported Product</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">State</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reported At</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @reports.each do |report| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= report.external_id %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      <%= report.reported_product.name %>
                    </div>
                    <div class="text-sm text-gray-500">
                      by <%= report.reported_product.user.username %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= report.reason.humanize %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                  <%= case report.state
                      when ReportedProduct::REPORT_STATES[:pending]
                        'bg-yellow-100 text-yellow-800'
                      when ReportedProduct::REPORT_STATES[:under_review]
                        'bg-blue-100 text-blue-800'
                      when ReportedProduct::REPORT_STATES[:declined]
                        'bg-red-100 text-red-800'
                      when ReportedProduct::REPORT_STATES[:actioned]
                        'bg-green-100 text-green-800'
                      end %>">
                  <%= report.state.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= report.created_at.strftime("%b %d, %Y %H:%M") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View", admin_reported_product_path(report), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-4">
      <%= paginate @reports %>
    </div>
  <% end %>
</div>
