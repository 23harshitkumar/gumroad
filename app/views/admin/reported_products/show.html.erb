<% content_for :title, "Report Details" %>

<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Reports", admin_reported_products_path, class: "text-indigo-600 hover:text-indigo-900" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Report Details</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Report ID: <%= @report.external_id %></p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Reason</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @report.reason.humanize %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">State</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
              <%= case @report.state
                  when ReportedProduct::REPORT_STATES[:pending]
                    'bg-yellow-100 text-yellow-800'
                  when ReportedProduct::REPORT_STATES[:under_review]
                    'bg-blue-100 text-blue-800'
                  when ReportedProduct::REPORT_STATES[:declined]
                    'bg-red-100 text-red-800'
                  when ReportedProduct::REPORT_STATES[:actioned]
                    'bg-green-100 text-green-800'
                  end %>">
              <%= @report.state.humanize %>
            </span>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Reported By</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @report.reporting_user.present? %>
              <%= @report.reporting_user.username %> (<%= @report.reporting_user.email %>)
            <% else %>
              Anonymous
            <% end %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Reported At</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @report.created_at.strftime("%B %d, %Y %H:%M") %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @report.description %></dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Reported Product</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">ID: <%= @reported_product.external_id %></p>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @reported_product.name %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Creator</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @reported_product.user.username %></dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">URL</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= link_to @reported_product.long_url, @reported_product.long_url, target: "_blank", class: "text-indigo-600 hover:text-indigo-900" %>
            </dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Created At</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @reported_product.created_at.strftime("%B %d, %Y") %></dd>
          </div>
        </dl>
      </div>
    </div>

    <% if @original_product.present? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Original Product</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">ID: <%= @original_product.external_id %></p>
        </div>
        <div class="border-t border-gray-200">
          <dl>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Name</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @original_product.name %></dd>
            </div>
            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Creator</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @original_product.user.username %></dd>
            </div>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">URL</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= link_to @original_product.long_url, @original_product.long_url, target: "_blank", class: "text-indigo-600 hover:text-indigo-900" %>
              </dd>
            </div>
            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Created At</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @original_product.created_at.strftime("%B %d, %Y") %></dd>
            </div>
          </dl>
        </div>
      </div>
    <% end %>
  </div>

  <% if @report.state == ReportedProduct::REPORT_STATES[:pending] || @report.state == ReportedProduct::REPORT_STATES[:under_review] %>
    <div class="mt-8 flex justify-end space-x-4">
      <%= form_tag admin_reported_product_path(@report), method: :patch, class: "inline" do %>
        <%= hidden_field_tag :action_type, "decline" %>
        <%= submit_tag "Decline Report", class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>

      <%= form_tag admin_reported_product_path(@report), method: :patch, class: "inline" do %>
        <%= hidden_field_tag :action_type, "approve" %>
        <%= submit_tag "Approve & unpublish product", class: "bg-red-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      <% end %>
    </div>
  <% end %>
</div>
